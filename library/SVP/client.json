        "categories.fetchAll": {
            "httpMethod": "GET",
            "uri": "{clientId}/categories",
            "description": "Get collection of categories",
            "parameters": {
                "clientId": {
                    "location": "uri",
                    "type": "string",
                    "required": true
                }
            }
        },

        "categories.create": {
            "httpMethod": "POST",
